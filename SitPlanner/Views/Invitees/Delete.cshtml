@model SitPlanner.Models.Invitee

@{
    ViewData["Title"] = "Delete";
}

<div style="font-family: cursive">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    </div>
    <br />
    <h2 style="color:#F3969A">Delete Invitee</h2>
    <hr />
    <h3 style="color:#5b8d7f; font-size:1.1rem;">Are you sure you want to delete <a style="font-weight: bold">@Html.DisplayFor(model => model.FullName)</a> ?</h3>
    <div>
        <a style="color: cadetblue; text-decoration: underline">@Html.DisplayFor(model => model.FirstName) details: </a>
        <dl style="color:#56CC9D; margin-top: 5px" class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Category)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Category.Name)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Address)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Address)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Event)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Event.Name)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-default" style="background-color:#b22d38; font-family: cursive" />
            </div>
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
</div>
