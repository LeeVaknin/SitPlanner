@model SitPlanner.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<div>
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    </div>
    <br />
    <h2 style="color:#F3969A">Delete Category</h2>
    <hr />
    <h3 style="color:#5b8d7f; font-size:1.1rem;">Are you sure you want to delete this?</h3>
    <div>
        <dl style="color:#56CC9D" class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Event)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Event.Name)
            </dd>
        </dl>

        <form asp-action="Delete">

            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-default" style="background-color:#b22d38;" />
            </div>
            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>