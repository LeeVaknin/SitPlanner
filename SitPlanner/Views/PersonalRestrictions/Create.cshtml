@model SitPlanner.Models.PersonalRestriction

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>PersonalRestriction</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MainInviteeId" class="control-label"></label>
                <select asp-for="MainInviteeId" class ="form-control" asp-items="ViewBag.MainInviteeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SecondaryInviteeId" class="control-label"></label>
                <select asp-for="SecondaryInviteeId" class ="form-control" asp-items="ViewBag.SecondaryInviteeId"></select>
