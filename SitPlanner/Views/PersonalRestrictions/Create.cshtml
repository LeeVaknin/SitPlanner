                <div class="checkbox">
                    <label>
                        <input asp-for="IsSittingTogether" /> @Html.DisplayNameFor(model => model.IsSittingTogether)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="EventId" class="control-label"></label>
                <select asp-for="EventId" class ="form-control" asp-items="ViewBag.EventId"></select>
            </div>
            <div class="form-group">
                <label asp-for="EventOptionId" class="control-label"></label>
                <select asp-for="EventOptionId" class ="form-control" asp-items="ViewBag.EventOptionId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
